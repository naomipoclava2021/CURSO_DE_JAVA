package controlador;

import javax.swing.JOptionPane;

public class Practica {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		String texto;
		int entero;
		float decimal;
		char caracter;
		
		texto = JOptionPane.showInputDialog("Ingrese un texto");
		System.out.println("El texto es: "+ texto);
		
		entero = Integer.parseInt(JOptionPane.showInputDialog("Ingrese un numero entero: "));
		System.out.println("El entero es: "+entero);
		
		decimal = Float.parseFloat(JOptionPane.showInputDialog("Ingrese un numero decimal"));
		System.out.println("El decimal es: "+ decimal);
		
		caracter = JOptionPane.showInputDialog("Ingrese un caracter").charAt(0);
		System.out.println("El caracter es: "+ caracter);
		
		JOptionPane.showMessageDialog(null, "El texto es: "+texto);
		JOptionPane.showMessageDialog(null, "El entero es: "+entero);
		JOptionPane.showMessageDialog(null, "El decimal es:"+decimal);
		JOptionPane.showMessageDialog(null, "El caracter es:"+caracter);
		

	}

}
